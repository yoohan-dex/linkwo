.ul 
  display flex
  list-style none
  background white
  box-align center
  align-items center
  margin 0
  padding 0
  animation topbar-appearing 1s
  & a
    transition: background 0.5s ease, color 0.5s ease;
    &:hover
      color red
  & li
    position relative
    vertical-align middle
    line-height 1
    text-decoration none
    -webkit-tap-highlight-color transparent
    -webkit-box-flex 0
    flex 0 0 auto
    user-select none
    background none
    padding 0.9em 1.1em
    text-transform none
    font-weight 2.5em
    cursor pointer
   
    &:hover
      background #eee
      
@keyframes topbar-appearing
  0%
    height 0
  100%
    height 40px
